<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="4" >

    <TextView
        android:id="@+id/judul"
        android:layout_column="3"
        android:layout_gravity="left"
        android:layout_row="1"
        android:paddingBottom="20dp"
        android:text="Biodata Diri"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/namaText"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="3"
        android:text="Nama" />

    <TextView
        android:id="@+id/namaValue"
        android:layout_column="3"
        android:layout_gravity="left"
        android:layout_row="3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/jurusanText"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="5"
        android:text="Jurusan" />

    <TextView
        android:id="@+id/jurusanValue"
        android:layout_column="3"
        android:layout_gravity="left"
        android:layout_row="5"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/nohpText"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="7"
        android:text="No Hp" />

    <TextView
        android:id="@+id/nohpValue"
        android:layout_column="3"
        android:layout_gravity="left"
        android:layout_row="7"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/statusText"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="9"
        android:text="Status" />

    <TextView
        android:id="@+id/statusValue"
        android:layout_column="3"
        android:layout_gravity="left"
        android:layout_row="9"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/hobyText"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="11"
        android:text="Hobby" />

    <TextView
        android:id="@+id/hobyValue"
        android:layout_column="3"
        android:layout_gravity="left"
        android:layout_row="11"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <Space
        android:layout_width="21dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />
    <Space
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />
    <Space
        android:layout_width="101dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />
    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2" />
    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4" />
    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="6" />
    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="8" />
    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="10" />
</GridLayout>
